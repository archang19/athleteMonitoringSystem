<%- include ../partials/header -%> 

<h1>New User Registration</h1>

<form action="/register" method="POST">
    <label for="username">Username:</label>
    <input type="text" id="username" name="username" placeholder="conventional" minlength=5 maxlength=10>

    <label for="password">Password:</label>
    <input type="password" id="password" name="password" placeholder="deadlift" minlength=5 maxlength=10>

    <label for="firstName">First Name:</label>
    <input type="text" id="firstName" name="firstName" placeholder="Bryce">

    <label for="lastName">Last Name:</label>
    <input type="text" id="lastName" name="lastName" placeholder="Lewis">

    <label for="email">Gmail:</label>
    <input type="email" id="email" name="email" pattern=".+@gmail.com" placeholder="tempoSquat@gmail.com" required>
    <br>
    <button>Submit</button>
</form>
<br></br>
<p style="display:inline"> Already a current user? </p>
<a href="/login">Login</a>
<%- include ../partials/footer -%> 