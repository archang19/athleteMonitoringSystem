<%- include ../partials/header -%> 

<h1>Dashboard</h1>

<form action="/dashboard" method="POST">
<input type="text" name="athleteUsername" placeholder="athlete's username">
<button>Add Athlete</button>
</form>

<h2>My Athletes: </h2>
<ul>
<% athletes.forEach(function(athlete){ %>
	<a href="/log/<%= athlete.username %>" > <%= athlete.firstName %> <%= athlete.lastName %> </a>
 <% }); %>
 </ul>

<h2>My Coaches: </h2>
<ul>
<% coaches.forEach(function(coach){ %>
	<li> <%= coach.firstName %> <%= coach.lastName %> </li>
 <% }); %>
 </ul>

<h2>My Training</h2>
<a href="/log/<%= username %>" >View my training log</a>
<form action="/log" method="POST">
  <textarea name="log" cols="40" rows="5" required></textarea>
  <br>
  <input type="text" name="name" placeholder="Name of Workout" required>
  <button>Submit!</button>
</form>

<a href="/logout">Logout</a>
<%- include ../partials/footer -%> 